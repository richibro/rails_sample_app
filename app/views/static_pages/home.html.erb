<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Welcome to the Sample App</h1>
        <p class="col-md-8 fs-4"><h2>
This is the home page for the
<a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a>
sample application.
</h2></p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <%= link_to "Sign up now!", signup_path, class: "btn btn-primary btn-lg px-4 gap-3" %>
        <%= link_to "Login", login_path, class: "btn btn-outline-secondary btn-lg px-4" %>
      </div>
        
      </div>
</div>
<%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"), "https://rubyonrails.org/" %>
<% end %>
